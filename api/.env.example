

PORT=3000
DB_USER="root"
DB_PASS="root"
DB_HOST=""
DB_NAME=""
DB_APP_NAME=""

# AWS CONFIG 
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=replace-me
AWS_SECRET_ACCESS_KEY=replace-me

# AWS S3
S3_BUCKET_NAME="balance-statements"

# JWT
JWT_SECRET_LOCAL=""
JWT_SECRET_PRD=""
JWT_EXPIRES_IN="1h"

# EMAIL CONFIG
# Use "resend" to send real emails. "console" logs links only (no delivery).
EMAIL_PROVIDER="resend"
RESEND_API_KEY=replace-me
# Resend-safe sender for local/dev. Keep this domain unless your own domain is verified.
EMAIL_FROM="Balance <onboarding@resend.dev>"

# SESSION
SESSION_TTL_DAYS=7

# FILE RESTRAINTS
MAX_FILES_PER_UPLOAD=10
MAX_FILE_SIZE_MB=15

# Public URLs
# CLIENT_PUBLIC_URL is used in magic links sent by email.
# API_PUBLIC_URL is used for API diagnostics and environment wiring.
# Local examples:
# CLIENT_PUBLIC_URL=http://localhost:4173
# API_PUBLIC_URL=http://localhost:3000
# Production examples:
# CLIENT_PUBLIC_URL=https://balance-2bbjqq.fly.dev
# API_PUBLIC_URL=https://balance-2bbjqq.fly.dev
CLIENT_PUBLIC_URL=https://balance-2bbjqq.fly.dev
API_PUBLIC_URL=https://balance-2bbjqq.fly.dev
# Backward-compatibility fallback for older config. Prefer CLIENT_PUBLIC_URL.
APP_PUBLIC_URL=https://balance-2bbjqq.fly.dev
# Optional when frontend is hosted separately.
CLIENT_URL=https://balance-2bbjqq.fly.dev
MAGIC_LINK_TTL_MINUTES=15

# Optional: comma-separated list of allowed browser origins for API CORS.
# Example: CORS_ORIGINS=http://localhost:5173,http://localhost:4173
CORS_ORIGINS='http://localhost:5173,http://localhost:4173'

# LOCAL
NODE_ENV="local"

MONGODB_URI=mongodb://localhost:27017/balance
